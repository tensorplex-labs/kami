{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/utils": ["src/commons/utils"],
      "@app/decorators": ["src/commons/decorators"],
      "@app/substrate/*": ["src/substrate/*"],
      "@app/routes/*": ["src/routes/*"],
      "@app/commons/*": ["src/commons/*"]
    }
  }
}
